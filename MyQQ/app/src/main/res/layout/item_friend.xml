<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.com.myqq.customview.CircleView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:imgSrc="@drawable/sample"
            android:layout_margin="15dp"
            android:id="@+id/main_user_logo"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/friend_text_listv_style"
                android:text="A"/>
            <TextView
                style="@style/friend_text_listv_style"
                android:text="今天11:21"/>
        </LinearLayout>

        <TextView
            style="@style/friend_text_listv_style"
            android:text="......................................................................."/>

        <android.com.myqq.customview.ThumbUpView
            android:id="@+id/friend_item_tpv1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>